
<div class="black">

  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount black">
          <h1 class="black"> Your Total Came Out To Be : </h1>
        <h2> <strong> <u> $<%= @haircutprice.price %> dollars</u></strong> </h2>
  <input type="hidden" name="form_haircut_id" value="<%= @haircutprice.id %>">

      </label>
    </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="A month's subscription"
            data-amount="<%= @haircutprice.price * 100 %> "
            data-locale="auto"></script>
  <% end %>
</div>
